<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<springProfile name="dev">

		<property name="LOGS" value="./logs" />
		<appender name="Console"
			class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}):%msg%n%throwable</Pattern>
			</layout>
		</appender>

		<root level="warn">
			<appender-ref ref="Console" />
		</root>

		<logger name="com.gbvbahia" level="info"
			additivity="false">
			<appender-ref ref="Console" />
		</logger>

	</springProfile>

	<!-- PROD PROFILE -->
	<springProfile name="prod">

		<property name="LOGS" value="./logs" />
		<appender name="Console"
			class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>%black(%d{yy-MM-dd HH:mm:ss}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}):%msg%n%throwable</Pattern>
			</layout>
		</appender>

		<appender name="RollingFile"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${LOGS}/motor.log</file>
			<encoder
				class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
				<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
			</encoder>

			<rollingPolicy
				class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<fileNamePattern>${LOGS}/archived/motor-%d{yyyy-MM-dd}.%i.log
				</fileNamePattern>
				<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
					<maxFileSize>5MB</maxFileSize>
				</timeBasedFileNamingAndTriggeringPolicy>
			</rollingPolicy>
		</appender>

		<root level="warn">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingFile" />
		</root>

		<logger name="com.gbvbahia" level="info"
			additivity="false">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingFile" />
		</logger>

	</springProfile>

</configuration>